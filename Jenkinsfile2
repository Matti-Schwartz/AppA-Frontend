def dd_ip = ""

pipeline {
	agent any
	environment {
		DOCKER_HUB_CREDS = credentials('Docker-Hub-Creds-ms')
	}
	stages {
		stage ('Tooling versions') {
			steps {
				sh 'docker --version'
				sh 'docker compose version'
				sh 'terraform --version'
				sh 'ansible --version'
			}
		}
        stage ('Terraform') {
            steps {
				sh 'terraform init'
                sh 'terraform apply -var \'sshPublicKeyPath=./.ssh/operator.pub\' --auto-approve'
				script {
					dd_ip = sh(returnStdout: true, script: "terraform output publicIPv4").trim()
				}
            }
        }
		stage ('Ansible') {
			steps {
				sh """ansible-playbook playbook.yaml -e "HOSTS=${dd_ip}" -i ${dd_ip},"""
			}
		}
	}
}